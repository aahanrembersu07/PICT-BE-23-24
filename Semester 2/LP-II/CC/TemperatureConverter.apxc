public class TemperatureConverter {
    public static void celsiusToFahrenheit(Decimal celsius) {
        Decimal ans=((((Decimal)9/5)*celsius).setScale(2)) + 32;
        System.debug('Temperature in Fahrenheit is '+ans);
    }
    public static void fahrenheitToCelsius(Decimal fahrenheit) {
        Decimal ans=(((Decimal)5/9).setScale(2))*(fahrenheit-32);
        System.debug('Temperature in Celsius is '+ans);
    }
}